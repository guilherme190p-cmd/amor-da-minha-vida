  <script>
    function verificar() {
      const senha = document.getElementById("senha").value.trim().toLowerCase();
      const correta = "amor da sua vida";

      if (senha === correta) {
        document.getElementById("login").classList.add("hidden");
        document.getElementById("amor").classList.remove("hidden");

        setTimeout(() => {
          document.getElementById("segredo").style.opacity = 1;
        }, 6000);
      } else {
        document.getElementById("erro").innerText = "senha incorreta üòÖ tenta de novo";
      }
    }
  </script>

